<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.farhan.project2.basic4checkbox"
    tools:showIn="@layout/activity_basic4_check_box"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobi"
        android:textSize="19sp"
        android:layout_margin="10dp"
        android:textColor="@android:color/black"/>

    <CheckBox
        android:id="@+id/membaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Membaca"
        android:textSize="15sp"/>
    <CheckBox
        android:id="@+id/olahraga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olahraga"
        android:textSize="15sp"/>
    <CheckBox
        android:id="@+id/menggambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menggambar"
        android:textSize="15sp"/>
    <CheckBox
        android:id="@+id/menulis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menulis"
        android:textSize="15sp"/>
    <CheckBox
        android:id="@+id/nonton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nonton Film"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/butonok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/Hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hasil"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/Jumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Jumlah Hobi"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/nextButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#d61010"
            android:text="Next"
            android:textColor="#ffffff" />
    </RelativeLayout>


</LinearLayout>
